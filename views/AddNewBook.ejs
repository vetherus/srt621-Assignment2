<html lang="en">

<head>
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <meta charset="utf-8">
    </meta>
</head>
<style>
    .inputErr{
        border: 1px solid red;
    }
    .btnAdd{
        margin-left: 73%;
    margin-bottom: 10px;
    color: white;
    background: #563d7c;
    border-radius: 5px;
    }
</style>

<body >
    <div class="background"></div>
    <h2 class="header pl-2 pr-2 pt-3 pb-3"><i class="fa fa-book"></i>&nbsp;&nbsp;Book details</h2>
    <div class="d-flex justify-content-center">
        <div class="card  mt-5"style="width:600px;" >
            <div class="card-body">

                <a href="/" class="text-decoration-none"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;back</a></br>
                <h4 style="text-align:center;">Add a new Book</h4>
                <hr>
                <form action="/AddNewBook" method="POST">
                <p>Name:</p>
                <input style="width: 100%;"  type="text" name="name" id="name" onchange="validateInput()"> 
                <p style="color:red;display:none;" id="nameErr">Book Name is required</p>
                <p style="margin-top:10px">Author Name:</p> 
                <input style="width: 100%;" type="text"   name="author" id="author" onchange="validateInput()" />        
                <p style="color:red;display:none" id="AuthErr">Book Author is required</p>
                 <p  style="margin-top:10px">Amazon Link:</p>
                <div><input  style="width: 100%;"type="text" name="link" id="link"  onchange="validateInput()"/> </div>
                <p style="color:red;display:none" id="linkErr">Book link is required</p>
                <div style="justify-content: end; display: flex;"> <input style="margin-top:20px; justify-content:end" class="btnAdd" type="submit" value="submit" onclick="validate()"/></div>
                </form>
             <div>
                <hr>
                <div style="display: flex;width: 100%; justify-content: center">
                    <a href="<%= '/home' %>" class="list-group-item cursor-pointer" style="margin-right: 20px; border: 1px solid black;"> List of books</a>
                    <a href="<%= '/AddNewBook' %>" class="list-group-item cursor-pointer"  style="margin-right: 20px;border: 1px solid black;"> Add book</a>
                    <a href="<%= '/DeleteABook' %>" class="list-group-item cursor-pointer" style="border: 1px solid black;">Delete a book</a>    
                </div>
            </div>   
            </div>
            
            </div>
            
        </div>
    </div>

    <br>
    <footer>

    </footer>
    <script>
        function validate(){
            var name = document.getElementById("name").value;
            var author = document.getElementById("author").value;
            var link = document.getElementById("link").value;
            if(name == ''){
                document.getElementById("nameErr").style.display = "block"
                var element = document.getElementById("name");
                element.classList.add("inputErr");
            }
             if(author == ''){
                document.getElementById("AuthErr").style.display = "block"
                 var element = document.getElementById("author");
                element.classList.add("inputErr");
            }
             if(link == ''){
                document.getElementById("linkErr").style.display = "block"
                  var element = document.getElementById("link");
                element.classList.add("inputErr");
            }
        }
        function validateInput(){
            var name = document.getElementById("name").value;
            var author = document.getElementById("author").value;
            var link = document.getElementById("link").value;
            if(name){
                 document.getElementById("nameErr").style.display = "none"
                var element = document.getElementById("name");
                element.classList.remove("inputErr");
            }
           if(author){
                 document.getElementById("AuthErr").style.display = "none"
                var element = document.getElementById("author");
                element.classList.remove("inputErr");
            }
            if(link){
                 document.getElementById("linkErr").style.display = "none"
                var element = document.getElementById("link");
                element.classList.remove("inputErr");
            }

        }
       
    </script>
</body>


</html>